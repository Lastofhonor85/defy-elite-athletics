  <script>
    function acceptTerms() {
      // Store agreement in local storage to remember consent
      localStorage.setItem('defyAgreedToTerms', 'true');
      // Redirect to the homepage after agreement
      window.location.href = 'index.html';
    }

    // Optional: Redirect users who already agreed
    window.addEventListener('DOMContentLoaded', () => {
      if (localStorage.getItem('defyAgreedToTerms') === 'true') {
        window.location.href = 'index.html';
      }
    });
