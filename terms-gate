  <script>
    (function () {
      const STORAGE_KEY = 'defy_terms_accepted';
      const SITE_TARGET = 'index.html'; // where users should land after acceptance (root)

      // central accept function used by all buttons
      function acceptTermsAndReturn() {
        try {
          localStorage.setItem(STORAGE_KEY, 'yes');
        } catch (e) {
          // localStorage might fail in some browsers or privacy modes - fallback to cookie
          try {
            document.cookie = `${STORAGE_KEY}=yes; path=/; max-age=${60 * 60 * 24 * 365}`;
          } catch (err) {
            console.warn('Could not persist acceptance in localStorage or cookie:', err);
          }
        }
        // Redirect back to index (site root) after acceptance
        window.location.href = SITE_TARGET;
      }

      // Decline behavior
      function declineAndExit() {
        alert('You must accept the Terms & Conditions to use Defy Elite Athletics. You will be returned to the homepage.');
        window.location.href = SITE_TARGET;
      }

      // Hook up buttons (some older versions may not have both IDs, so test)
      const agreeBtn = document.querySelector('.agree-btn') || document.getElementById('agreeBtn');
      if (agreeBtn) {
        agreeBtn.addEventListener('click', acceptTermsAndReturn);
      }

      const acceptBtn = document.getElementById('acceptTerms');
      if (acceptBtn) {
        acceptBtn.addEventListener('click', acceptTermsAndReturn);
      }

      const declineBtn = document.getElementById('declineTerms');
      if (declineBtn) {
        declineBtn.addEventListener('click', declineAndExit);
      }

      // Auto-redirect if they already accepted
      try {
        const accepted = localStorage.getItem(STORAGE_KEY) === 'yes' ||
          (document.cookie && document.cookie.indexOf(`${STORAGE_KEY}=yes`) !== -1);
        if (accepted) {
          // Use replace so it doesn't create an extra history entry
          window.location.replace(SITE_TARGET);
        }
      } catch (e) {
        // If localStorage check throws, ignore and let the page function normally
        console.warn('Could not read acceptance state:', e);
      }
    })();
  </script>
