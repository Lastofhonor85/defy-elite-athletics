        <!-- Primary accept button visible on the page -->
        <button class="agree-btn" id="agreeBtn" type="button">I Agree & Enter Site</button>
      </div>
    </main>

    <!-- Optional second accept / decline block (keeps the accept UI consistent) -->
    <div style="text-align:center; margin-top: 1.5rem;">
      <button id="acceptTerms" style="background:#09f;color:#000;border:none;padding:10px 18px;border-radius:8px;font-weight:700;cursor:pointer;">
        Accept Terms & Continue
      </button>
      <button id="declineTerms" style="margin-left:12px;background:#333;color:#fff;border:none;padding:10px 18px;border-radius:8px;cursor:pointer;">
        Decline
      </button>
