  <script>
    function acceptTerms() {
      try {
        // Set consent
        localStorage.setItem('defyAgreedToTerms', 'true');
        console.log('Consent stored');
        // Delay to ensure localStorage write completes
        setTimeout(() => {
          window.location.href = 'index.html';
        }, 250);
      } catch (err) {
        console.error('Failed to set consent:', err);
      }
    }
